# Server port (Azure/GCP/AWS usually inject this automatically)
# Allowed: any valid port number
PORT=8080

# Environment label shown in the app badge
# Allowed: any text (examples: production, staging, dev)
APP_ENV=YOUR_ENV

# Product/app name shown in header and browser tab
# Allowed: any text
APP_TITLE=YOUR_APP_TITLE

# Header subtitle/tagline text
# Allowed: any text
APP_BRAND_TAGLINE=YOUR_TAGLINE

# Startup theme used when the app loads
# Allowed: corp | school | stem
APP_THEME_DEFAULT=corp

# Show or hide the environment badge in UI
# Allowed: true | false
APP_SHOW_ENV_BADGE=true

# Enable or disable the theme switcher buttons in UI
# Allowed: true | false
APP_ENABLE_THEME_SWITCHER=true

# Optional local Vite fallback values (used in local dev if runtime config is missing)
# Allowed: same as APP_* equivalents above
VITE_APP_ENV=development
VITE_APP_TITLE=YOUR_LOCAL_APP_TITLE
VITE_APP_BRAND_TAGLINE=YOUR_LOCAL_TAGLINE
VITE_APP_THEME_DEFAULT=corp
VITE_APP_SHOW_ENV_BADGE=true
VITE_APP_ENABLE_THEME_SWITCHER=true
